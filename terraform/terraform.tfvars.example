# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values

# AWS region for all resources
aws_region = "us-east-1"

# Domain name for the static website (e.g., translate.example.com)
# IMPORTANT: This domain must already be hosted in Route53
# Terraform will create ACM certificates and DNS records automatically
domain_name = "translate.example.com"

# Parent hosted zone (one level up). This is the Route53 hosted zone name
# that contains the record for the site. For example, if domain_name is
# "translate.example.com" then parent_domain should be "example.com".
parent_domain = "example.com"

# API domain name (optional - defaults to "api.{domain_name}")
# If not specified, will use api.translate.example.com
# api_domain_name = "api.translate.example.com"

# API key for authenticating speech-to-text client communication
# Generate a secure random key: openssl rand -base64 32
api_key = "your-secure-api-key-here"

# Environment name (dev, staging, production)
environment = "production"

# Project name for resource naming
project_name = "live-translate"

# Path to Lambda deployment package (relative to terraform directory)
lambda_zip_path = "../lambda_deployment.zip"

# Enable AWS token generation for Transcribe service
# Set to false if you want clients to use local AWS credentials instead
# When true, creates a Transcribe role and grants Lambda permission to assume it
enable_token_generation = true
