# AWS Configuration (optional - can use default credentials)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_DEFAULT_REGION=us-east-1

# AWS Transcribe Token Generation
# IAM Role ARN for generating temporary Transcribe credentials
# The server/lambda will assume this role to provide session credentials to clients
# TRANSCRIBE_ROLE_ARN=arn:aws:iam::123456789012:role/LiveTranslateTranscribeRole

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5050
FLASK_DEBUG=False

# Security Configuration
# API key for authenticating speech-to-text client communication
# Generate a secure random key and set the same value on both server and client
API_KEY=your-secure-api-key-here

# Audio Configuration
# Audio device for speech-to-text input (optional)
# Use 'python speech_to_text.py -l' to list available devices
# Can specify by index: LT_AUDIO_DEVICE=0
# Or by name: LT_AUDIO_DEVICE="USB Microphone"
# LT_AUDIO_DEVICE=0

# Client Token Configuration
# Set to "true" to use local AWS credentials instead of requesting tokens from server
# Useful for local development or testing
# LT_LOCAL_TOKEN=false

# UI Customization (optional)
# LT_LOGO_FILE=path/to/logo.png
# LT_PAGE_TITLE=Live Translation
# LT_CONTACT_TEXT=support@example.com
